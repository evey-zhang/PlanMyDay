<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardCornerRadius="10dp"
	app:cardElevation = "12dp"
	android:layout_margin="16dp"
	android:id="@+id/cell_container"
	>

	<FrameLayout
		android:id="@+id/component_container"
		android:layout_width="328dp"
		android:layout_height="120dp"
		android:background="#FEFEFE"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<TextView
			android:id="@+id/cell_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="start|top"
			android:layout_marginStart="16dp"
			android:layout_marginTop="15dp"
			android:background="#EFABAB"
			android:padding="8dp"
			android:text="7:00am - 8:00pm"
			android:textColor="#FEFEFE"
			android:textSize="8sp" />

		<TextView
			android:id="@+id/cell_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="start|top"
			android:layout_marginStart="16dp"
			android:layout_marginTop="56dp"
			android:gravity="start"
			android:text="USC Dulce"
			android:textColor="#000000"
			android:textSize="13sp"
			android:textStyle="bold" />

		<View
			android:id="@+id/line_4"
			android:layout_width="90dp"
			android:layout_height="2dp"
			android:layout_gravity="start|top"
			android:layout_marginStart="16dp"
			android:layout_marginTop="76dp"
			android:background="@drawable/line_3" />

		<TextView
			android:id="@+id/cell_address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="start|top"
			android:layout_marginStart="16dp"
			android:layout_marginTop="86dp"
			android:gravity="start"
			android:text="USC Village, 90007\n"
			android:textColor="#000000"
			android:textSize="10sp" />

	</FrameLayout>

</androidx.cardview.widget.CardView>

